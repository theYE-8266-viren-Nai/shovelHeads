---
// Reusable layout with Tailwind colors and shared structure
const { title = "My Astro Site" } = Astro.props;
import '../styles/global.css';
---
<!DOCTYPE html>
<html lang="en" class="bg-background text-accent">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col font-sans">
    <!-- Shared header -->
    <header class="py-6 text-center text-3xl font-bold tracking-wide border-b border-accent/20">
      <a href="/" class="hover:underline">My Astro Landing</a>
    </header>

    <!-- Dynamic page content -->
    <main class="flex-1 px-6 py-10">
      <slot />
    </main>

    <!-- Shared footer -->
    <footer class="text-center py-4 text-sm opacity-70 border-t border-accent/20">
      &copy; 2025 Your Name. All rights reserved.
    </footer>
  </body>
</html>
